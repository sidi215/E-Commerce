{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/app/*": [
        "./app/*"
      ],
      "@/public/*": [
        "./public/*"
      ],
      "@/styles/*": [
        "./styles/*"
      ],
      "@/types/*": [
        "./types/*"
      ],
      "@/hooks/*": [
        "./hooks/*"
      ],
      "@/utils/*": [
        "./utils/*"
      ],
      "@/assets/*": [
        "./assets/*"
      ],
      "@/config/*": [
        "./config/*"
      ],
      "@/store/*": [
        "./store/*"
      ],
      "@/api/*": [
        "./api/*"
      ],
      "@/data/*": [
        "./data/*"
      ],
      "@/services/*": [
        "./services/*"
      ],
      "@/contexts/*": [
        "./contexts/*"
      ],
      "@/constants/*": [
        "./constants/*"
      ],
      "@/helpers/*": [
        "./helpers/*"
      ],
      "@/validators/*": [
        "./validators/*"
      ],
      "@/middleware/*": [
        "./middleware/*"
      ],
      "@/pages/*": [
        "./pages/*"
      ],
      "@/stylesheets/*": [
        "./stylesheets/*"
      ],
      "@/templates/*": [
        "./templates/*"
      ],
      "@/layouts/*": [
        "./layouts/*"
      ],
      "@/src/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}
